<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Quiz Manager Group -->
        <record id="group_quiz_manager" model="res.groups">
            <field name="name">Quiz Manager</field>
            <field name="category_id" ref="base.module_category_website"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Quiz User Group -->
        <record id="group_quiz_user" model="res.groups">
            <field name="name">Quiz User</field>
            <field name="category_id" ref="base.module_category_website"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        </record>
        
        <!-- Record Rules -->
        <record id="rule_quiz_public" model="ir.rule">
            <field name="name">Public quizzes only</field>
            <field name="model_id" ref="model_quiz_quiz"/>
            <field name="domain_force">[('is_published', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="rule_session_own" model="ir.rule">
            <field name="name">Own quiz sessions only</field>
            <field name="model_id" ref="model_quiz_session"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal')), (4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="rule_session_all" model="ir.rule">
            <field name="name">All quiz sessions</field>
            <field name="model_id" ref="model_quiz_session"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_quiz_manager'))]"/>
        </record>
    </data>
</odoo>
