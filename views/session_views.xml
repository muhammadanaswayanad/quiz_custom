<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Session Tree View -->
    <record id="view_session_tree" model="ir.ui.view">
        <field name="name">quiz.session.tree</field>
        <field name="model">quiz.session</field>
        <field name="arch" type="xml">
            <tree>
                <field name="quiz_id"/>
                <field name="participant_name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="total_score"/>
                <field name="percentage"/>
                <field name="passed"/>
                <field name="start_time"/>
                <field name="end_time"/>
            </tree>
        </field>
    </record>

    <!-- Session Form View -->
    <record id="view_session_form" model="ir.ui.view">
        <field name="name">quiz.session.form</field>
        <field name="model">quiz.session</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="quiz_id"/>
                            <field name="state"/>
                            <field name="session_token"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="participant_name"/>
                            <field name="participant_email"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="time_limit"/>
                        </group>
                        <group>
                            <field name="total_score"/>
                            <field name="max_score"/>
                            <field name="percentage"/>
                            <field name="passed"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Answers">
                            <field name="answer_ids" mode="tree" readonly="1">
                                <tree>
                                    <field name="question_id"/>
                                    <field name="score"/>
                                    <field name="max_score"/>
                                    <field name="answered_at"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Session Action -->
    <record id="action_quiz_sessions" model="ir.actions.act_window">
        <field name="name">Quiz Sessions</field>
        <field name="res_model">quiz.session</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_session_tree"/>
    </record>

    <menuitem id="menu_sessions" name="Sessions" parent="menu_quiz_root" action="action_quiz_sessions" sequence="30"/>
</odoo>
