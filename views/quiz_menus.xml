        <menuitem id="menu_quiz_root"
                  name="Quiz Engine"
                  web_icon="quiz_custom,static/description/icon.png"
                  sequence="50"/>

        <!-- Quiz Submenu -->
        <menuitem id="menu_quiz_main"
                  name="Quizzes"
                  parent="menu_quiz_root"
                  sequence="10"/>

        <menuitem id="menu_quiz_list"
                  name="Quizzes"
                  parent="menu_quiz_main"
                  action="action_quiz"
                  sequence="10"/>

        <menuitem id="menu_quiz_question"
                  name="Questions"
                  parent="menu_quiz_main"
                  action="action_question"
                  sequence="20"/>

        <!-- Quiz Results Submenu -->
        <menuitem id="menu_quiz_results"
                  name="Results"
                  parent="menu_quiz_root"
                  sequence="20"/>

        <menuitem id="menu_quiz_session"
